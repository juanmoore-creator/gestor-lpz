rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // TEMPORARY: DEBUG ONLY - ALLOW EVERYTHING
    match /{document=**} {
      allow read, write: if true;
    }

    match /artifacts/tasadorpro/users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    match /inmuebles/{document=**} {
      allow read, write: if request.auth != null;
    }
    match /clients/{document=**} {
      allow read, write: if request.auth != null;
    }
    match /visits/{document=**} {
      allow read, write: if request.auth != null;
    }
    match /offers/{document=**} {
      allow read, write: if request.auth != null;
    }
    match /documents/{document=**} {
      allow read, write: if request.auth != null;
    }
    match /whatsapp_conversations/{document=**} {
      allow read, write: if request.auth != null;
    }
    // Explicitly allow common data paths if they are ever moved to root (defensive)
    match /comparables/{document=**} {
      allow read, write: if request.auth != null;
    }
    match /target/{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
